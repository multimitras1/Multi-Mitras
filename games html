<script>
const wordsList = [
  "keyboard","javascript","function","variable","object","array","document",
  "browser","coding","developer","performance","speed","accuracy","challenge",
  "practice","typing","game","random","paragraph","online","test"
];

let interval, startTime, gameDuration, currentWordIndex = 0, correctChars = 0;

function getRandomWord() {
  return wordsList[Math.floor(Math.random() * wordsList.length)];
}

function startGame() {
  gameDuration = parseInt(document.getElementById('gameTime').value);
  currentWordIndex = 0;
  correctChars = 0;
  document.getElementById('inputArea').value = '';
  document.getElementById('inputArea').disabled = false;
  document.getElementById('inputArea').focus();
  document.getElementById('gameArea').innerHTML = getRandomWord();
  document.getElementById('stats').innerText = "WPM: 0 | Accuracy: 0%";
  startTime = Date.now();

  if(interval) clearInterval(interval);
  interval = setInterval(updateStats, 1000);

  setTimeout(endGame, gameDuration * 1000);
}

document.getElementById('inputArea').addEventListener('input', () => {
  const typed = document.getElementById('inputArea').value;
  const currentWord = document.getElementById('gameArea').innerText;

  if(typed === currentWord){
    correctChars += typed.length;
    document.getElementById('inputArea').value = '';
    document.getElementById('gameArea').innerText = getRandomWord();
  }
});

function updateStats() {
  const elapsedMinutes = (Date.now() - startTime)/60000;
  const wpm = Math.round((correctChars/5)/elapsedMinutes);
  const typed = document.getElementById('inputArea').value;
  const currentWord = document.getElementById('gameArea').innerText;
  let acc = typed.length === 0 ? 100 : Math.round((correctChars/ (correctChars + (typed.length))) * 100);
  document.getElementById('stats').innerText = `WPM: ${wpm} | Accuracy: ${acc}%`;
}

function endGame() {
  clearInterval(interval);
  document.getElementById('inputArea').disabled = true;
  alert("Game Over! Final stats: " + document.getElementById('stats').innerText);
}
</script>

